<Page x:Class="TaskKiller.Views.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskKiller.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About">

    <Grid Margin="10">
        <StackPanel MaxWidth="400" VerticalAlignment="Center">
            <TextBlock FontWeight="Bold" x:Name="TextBlock_AboutVersion"/>
            <TextBlock FontStyle="Italic" Margin="0,20" TextWrapping="Wrap"  Text="Task Killer is a Desktop tool that can be used to query, sort, and manage running processes on a system."/>
            <TextBlock>           
                See Documentation at
                <Hyperlink  Click="DocumentationHyperlink_Click">
                    <TextBlock x:Name="DocumentationHyperlink_TextBlock"/>
                </Hyperlink>
                .
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
